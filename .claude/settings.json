{
  "alwaysThinkingEnabled": false,
  "cleanupPeriodDays": 10,
  "disabledMcpjsonServers": [
    "claude"
  ],
  "enabledMcpjsonServers": [
    "logic"
  ],
  "env": {
    "BASH_MAX_OUTPUT_LENGTH": 200000,
    "MAX_THINKING_TOKENS": 0
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(node:*)",
      "Glob",
      "Grep",
      "mcp__logic__create_entities",
      "mcp__logic__delete_entities",
      "mcp__logic__open_nodes",
      "mcp__logic__read_graph",
      "mcp__logic__search_nodes",
      "Read",
      "Skill(brainstorming)",
      "Skill(code-review)",
      "Skill(conversation-log)",
      "Skill(framework-initialization)",
      "Skill(framework-methodology)",
      "SlashCommand(/reload)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "mcp__logic__add_observations",
      "mcp__logic__create_relations",
      "mcp__logic__delete_observations",
      "mcp__logic__delete_relations"
    ]
  }
}
